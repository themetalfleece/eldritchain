{
  "name": "eldritchain",
  "version": "1.0.0",
  "private": true,
  "description": "A decentralized daily creature summoning dApp with eldritch horror twist",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "web": "yarn workspace @eldritchain/web",
    "contracts": "yarn workspace @eldritchain/contracts",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\" && prettier --write --plugin=prettier-plugin-solidity \"apps/contracts/contracts/**/*.sol\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\" && prettier --check --plugin=prettier-plugin-solidity \"apps/contracts/contracts/**/*.sol\""
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447",
  "devDependencies": {
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^2.1.0"
  }
}