{
  "name": "@eldritchain/indexer",
  "version": "1.0.0",
  "description": "Eldritchain event indexer and leaderboard API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/api.ts",
    "dev:indexer": "tsx watch src/indexer.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:api": "node dist/api.js",
    "start:indexer": "node dist/indexer.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@eldritchain/common": "1.0.0",
    "@fastify/cors": "^8.5.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.0",
    "mongoose": "^8.0.0",
    "viem": "^2.38.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
